    <script>
        // Get the form element
        const form = document.getElementById('whatsappForm');
        const greetingMessage = document.getElementById('greeting-message');

        // Function to handle form submission
        form.addEventListener('submit', function(event) {
            // Prevent the default form submission
            event.preventDefault();

            // 1. Get form data
            const name = document.getElementById('name').value.trim();
            const mobile = document.getElementById('mobile').value.trim();
            const message = document.getElementById('message').value.trim();

            if (!name || !mobile || !message) {
                // Simple validation check (though 'required' attribute handles this mostly)
                return; 
            }

            // 2. Construct the WhatsApp message text
            // The number is hardcoded as requested: 7599382748 (with India code 91)
            const targetNumber = '917599382748'; 
            
            // Format the message with line breaks (%0A) and URL encoding
            const whatsappText = encodeURIComponent(
                `Hello Aayush! I saw your profile on CreatorZoneAayush and I have a project query.\n\n` +
                `üë§ Name: ${name}\n` +
                `üìû Mobile: ${mobile}\n` +
                `üí¨ Query/Details: ${message}\n\n` +
                `Looking forward to connecting!`
            );

            // 3. Create the WhatsApp URL
            const whatsappUrl = `https://wa.me/${targetNumber}?text=${whatsappText}`;

            // 4. Open the WhatsApp URL in a new tab/window
            window.open(whatsappUrl, '_blank');

            // 5. Show the Thank You/Greeting Message
            greetingMessage.classList.remove('hidden');

            // Optional: Clear the form after submission
            form.reset();
        });
    </script>
